extend type Query {
    findAllBooks: [Book]!
    countBooks: Long!
}

type Book {
    id: ID!
    title: String!
    isbn: String!
    pageCount: Int
    author: Author
}

extend type Mutation {
    newBook(title: String!, isbn: String!, pageCount: Int, author: ID!) : Book!
    deleteBook(id: ID!): Boolean
    updateBookPageCount(pageCount: Int!, id: ID!): Book!
}